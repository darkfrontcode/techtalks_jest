{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["es2017", "dom", "esnext"],
		"module": "commonjs",
		"target": "es6",
		"moduleResolution": "node",
		"noImplicitAny": true,
		// "noUnusedLocals": true,
		"pretty": true,
		"removeComments": true,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true
	},
	"exclude": [
		"node_modules"
	]
}
